<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SaveGoalFragment">

    <TextView
        android:id="@+id/save_goal_frag_txt"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="@string/save_goal_frag_txt" />

    <ProgressBar
        android:id="@+id/save_goal_frag_prog"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="100dp"
        android:indeterminate="false" />

    <Button
        android:id="@+id/save_goal_frag_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="@string/save_goal_frag_btn" />
</FrameLayout>